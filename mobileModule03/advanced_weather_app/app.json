{
  "expo": {
    "name": "advanced_weather_app",
    "slug": "advanced_weather_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mediumweatherapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
	  [
        "expo-font",
        {
          "fonts": [
			  "./assets/fonts/Nunito-Regular.ttf",
			  "./assets/fonts/Nunito-Bold.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "Nunito",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Nunito-Regular.ttf",
                    "weight": 700
                  },
                  {
                    "path": "./assets/fonts/Nunito-Bold.ttf",
                    "weight": 700,
					"style": "bold"
                  }
                ]
              }
            ]
          },
          "ios": {
            "fonts": ["./assets/fonts/Nunito-Regular.ttf", "./assets/fonts/Nunito-Bold.ttf"]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
